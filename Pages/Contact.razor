    <InputText @bind-Value="formModel.Name" placeholder="Your Name" />
    <InputText @bind-Value="formModel.Email" placeholder="Your Email" />
    <InputTextArea @bind-Value="formModel.Message" placeholder="Your Message" />
    <button type="submit">Send</button>
</EditForm>


